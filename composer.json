{
    "name": "innmind/logger",
    "type": "library",
    "description": "Logger",
    "keywords": ["logger", "psr-3"],
    "homepage": "http://github.com/Innmind/Logger",
    "license": "MIT",
    "authors": [
        {
            "name": "Baptiste Langlade",
            "email": "langlade.baptiste@gmail.com"
        }
    ],
    "support": {
        "issues": "http://github.com/Innmind/Logger/issues"
    },
    "require": {
        "php": "~7.4",
        "psr/log": "^1.0",
        "monolog/monolog": "~2.0",
        "innmind/url": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Innmind\\Logger\\": "src/"
        },
        "files": ["src/bootstrap.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Innmind\\Logger\\": "tests/",
            "Fixture\\Innmind\\Logger\\": "fixtures/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "~8.0",
        "sentry/sentry": "~2.0",
        "php-http/guzzle6-adapter": "^2.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always"
    }
}
